type Task {
	id: ID!,
	name: String,
	description: String,
	deadline: String,
	status: TaskStatus,
	fileName: String
}

enum TaskStatus {
	AWAIT
	DONE
	EXPIRED
}

type Query {
	tasks: [Task!]!
	tasksByStatus(status: TaskStatus): [Task!]!
}

type Mutation {
	createTask(name: String!, description: String, deadline: String): Task
}